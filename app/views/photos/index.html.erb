<%= stylesheet_link_tag 'photos', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="page-header"><h1 class="left">Upload Photo</h1> </div>
<div id="flash"> 
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
  </div>
<form method="get">
  <br>
  <button type="submit" formaction="/photos_get_new", class="btn btn-primary">Upload Photo</button> || <button type="submit" formaction="welcome", class="btn btn-warning">Back</button>
</form>
<div class="container-fluid">
<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-sm-2" align="center" style="margin:20px">
      <h4 class="media-heading"><%= photo.title %></h4>
      <!-- Renders image -->
      <%= link_to image_tag(photo.image.url, class: 'media-object'), photo.image.url, target: '_blank' %>
      <!-- Button to delete image -->
      <br>
      <%= link_to 'Remove', photo_path(photo), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
  <% end %>
</div>
</div>
<br>
